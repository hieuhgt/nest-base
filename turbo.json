{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
			"outputs": [
				"dist/**",
				"storybook-static/**",
				"build/**",
				"out/**",
				"lib/**",
				".next/**"
			]
		},
    "dev": {
      "persistent": true,
      "cache": false
    },
    "dev:local": {
      "cache": false,
      "outputs": []
    },
    "dev:test": {
      "cache": false,
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "build-libs": {
      "outputs": ["dist/**"]
    },
    "build-type": {
      "outputs": ["dist/**"]
    }
  }
}
